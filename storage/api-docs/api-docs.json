                    },
                    "description": {
                        "description": "Description of the product",
                        "type": "string",
                        "example": "Description of the product"
                    },
                    "price": {
                        "description": "Price of the product",
                        "type": "number",
                        "example": "100.00"
                    },
                    "category": {
                        "description": "Category of the product",
                        "type": "string",
                        "example": "Category 1"
                    },
